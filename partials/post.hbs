<header class="post-header">
    <h1 class="post-title">{{title}}</h1>
    <section class="post-meta">
        <time class="post-date" datetime="{{date format='YYYY-MM-DD'}}">{{date format="MMMM DD, YYYY"}}</time>. By {{author}}.
    </section>
</header>

<section class="post-content">
    {{content}}
    Tags: {{tags}}
</section>
